<FillPane xmlns:bxml="http://pivot.apache.org/bxml"
          xmlns="org.apache.pivot.wtk">
    <SplitPane orientation="vertical"
               resizeMode="primary_region"
               styles="{useShadow:true}">
        <primaryRegion>bottom_right</primaryRegion>
        <left>
            <TabPane bxml:id="tabPanels"/>
        </left>
        <right>
            <FillPane bxml:id="slidePanels" minimumHeight="200"/>
        </right>
    </SplitPane>
</FillPane>