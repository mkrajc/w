<SplitPane xmlns:bxml="http://pivot.apache.org/bxml"
           xmlns:content="org.apache.pivot.wtk.content"
           xmlns="org.apache.pivot.wtk"
           bxml:id="liveScreen"
           orientation="horizontal"
           splitRatio="0.3"
           styles="{splitterThickness:3, useShadow:true}" >
    <left>
        <FillPane styles="{backgroundColor: '#f6f5f6'}"/>
    </left>
    <right>
        <TabPane bxml:id="liveContentPane"/>
    </right>
</SplitPane>