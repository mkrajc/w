<TablePane xmlns:bxml="http://pivot.apache.org/bxml"
           xmlns="org.apache.pivot.wtk"
           styles="{verticalSpacing:0, horizontalSpacing:0, showHorizontalGridLines:false, showVerticalGridLines:false, padding:0}">
    <columns>
        <TablePane.Column width="1*"/>
    </columns>

    <TablePane.Row height="25">
        <Label bxml:id="songName" styles="{horizontalAlignment:'left', verticalAlignment:'center'}"/>
    </TablePane.Row>

    <TablePane.Row height="1*">
        <Border>
            <ScrollPane horizontalScrollBarPolicy="fill_to_capacity">
                <BoxPane bxml:id="songPartsPanel" orientation="vertical" styles="{fill:true}"/>
            </ScrollPane>
        </Border>
    </TablePane.Row>
</TablePane>

